{
    "manifest_version": 3,
    "name": "Download Inspector",
    "version": "1.0",
    
    "host_permissions": [
        "https://www.filescan.io/api/scan/*",
        "https://localhost:5000/"
    ],
    "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "service_workers": "background.js"
    }
  }
  